<%= render :partial => 'layouts/header', :locals => {:title => @user.name} %>

<% unless current_user.all_friends.include? @user or current_user == @user %>
  <%= form_for @friendship, :url => { :action => "request_friendship" } do |f| %>
    <%= f.hidden_field :consumer_id, :value => @user.id %>
    <%= f.submit "Request friendship" %>
  <% end %>
<% end %>

<h2>Friends</h2>
<% @user.friends.each do |friend| %>
  <p><%= render :partial => 'users/userlink', :locals => {:user => friend} %></p>
<% end %>
