<h1>Listing coordinates</h1>

<table>
  <tr>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Elevation</th>
    <th>Time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coordinates.each do |coordinate| %>
  <tr>
    <td><%= coordinate.latitude %></td>
    <td><%= coordinate.longitude %></td>
    <td><%= coordinate.elevation %></td>
    <td><%= coordinate.time %></td>
    <td><%= link_to 'Show', [@track, coordinate] %></td>
    <td><%= link_to 'Edit', edit_track_coordinate_path(@track, coordinate) %></td>
    <td><%= link_to 'Destroy', [@track, coordinate], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

